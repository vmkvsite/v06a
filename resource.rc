#include "rc.h"
#include <windows.h>

IDM_MAIN MENU
BEGIN
    POPUP "&File"
    BEGIN
        MENUITEM "&Size",       ID_SIZE
        MENUITEM "&Color",      ID_COLOR
        MENUITEM SEPARATOR
        MENUITEM "E&xit",       ID_EXIT
    END
END

IDD_SIZE DIALOGEX 0, 0, 200, 120
STYLE DS_MODALFRAME | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "Board Size"
FONT 8, "MS Sans Serif"
BEGIN
    LTEXT           "Width:",IDC_STATIC,20,20,30,8
    EDITTEXT        IDC_EDIT1,60,18,40,14,ES_AUTOHSCROLL | ES_NUMBER
    LTEXT           "Height:",IDC_STATIC,20,45,30,8
    EDITTEXT        IDC_EDIT2,60,43,40,14,ES_AUTOHSCROLL | ES_NUMBER
    DEFPUSHBUTTON   "OK",IDOK,40,80,50,14
    PUSHBUTTON      "Cancel",IDCANCEL,110,80,50,14
END